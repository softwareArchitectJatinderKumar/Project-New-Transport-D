{
  "name": "transport-app",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.conf.json",
    "start:server": "node server.js",
    "start:local": "node server-local.js",
    "dev": "concurrently \"npm run start:server\" \"npm run start\"",
    "dev:local": "concurrently \"npm run start:local\" \"npm run start\"",
    "build": "ng build",
    "build:server": "ng build && node server.js",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "start:prod": "ng build && NODE_ENV=production node server.js",
    "pm2:start": "pm2 start server.js --name transport-app",
    "pm2:restart": "pm2 restart transport-app",
    "pm2:stop": "pm2 stop transport-app",
    "pm2:logs": "pm2 logs transport-app"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@supabase/supabase-js": "^2.39.0",
    "bootstrap": "^5.3.8",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "xlsx": "^0.18.5",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.2",
    "@angular/cli": "^20.3.2",
    "@angular/compiler-cli": "^20.3.0",
    "@types/jasmine": "~5.1.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "multer": "^1.4.5-lts.1",
    "pm2": "^5.3.0",
    "typescript": "~5.9.2"
  }
}
